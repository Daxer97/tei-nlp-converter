{
  "dashboard": {
    "title": "Knowledge Base Performance",
    "tags": ["nlp", "knowledge-base", "performance"],
    "timezone": "browser",
    "schemaVersion": 27,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "type": "graph",
        "title": "KB Lookup Latency by Source",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(kb_lookup_duration_seconds_bucket[5m]))",
            "legendFormat": "{{kb_id}} - p95"
          }
        ],
        "yaxes": [
          {
            "format": "s",
            "label": "Latency"
          }
        ]
      },
      {
        "id": 2,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "type": "graph",
        "title": "Cache Hit Rate",
        "targets": [
          {
            "expr": "sum(rate(kb_cache_hits_total[5m])) by (kb_id, cache_tier) / (sum(rate(kb_cache_hits_total[5m])) by (kb_id, cache_tier) + sum(rate(kb_cache_misses_total[5m])) by (kb_id, cache_tier))",
            "legendFormat": "{{kb_id}} - {{cache_tier}}"
          }
        ],
        "yaxes": [
          {
            "format": "percentunit",
            "label": "Hit Rate",
            "max": 1.0,
            "min": 0
          }
        ],
        "alert": {
          "name": "Low KB Cache Hit Rate",
          "conditions": [
            {
              "evaluator": {
                "params": [0.7],
                "type": "lt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "frequency": "5m",
          "message": "KB cache hit rate for {{kb_id}} is below 70%"
        }
      },
      {
        "id": 3,
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 8},
        "type": "stat",
        "title": "Total Entities Enriched",
        "targets": [
          {
            "expr": "sum(increase(kb_enrichments_total[24h]))"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        }
      },
      {
        "id": 4,
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 8},
        "type": "stat",
        "title": "KB Enrichment Success Rate",
        "targets": [
          {
            "expr": "sum(rate(kb_enrichments_successful_total[5m])) / sum(rate(kb_enrichments_attempted_total[5m]))"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 0.80, "color": "yellow"},
                {"value": 0.90, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 8},
        "type": "stat",
        "title": "Average Fallback Chain Length",
        "targets": [
          {
            "expr": "avg(kb_fallback_chain_length)"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "decimals": 1
          }
        }
      },
      {
        "id": 6,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "type": "graph",
        "title": "KB Sync Status",
        "targets": [
          {
            "expr": "kb_last_sync_timestamp_seconds",
            "legendFormat": "{{kb_id}}"
          }
        ],
        "yaxes": [
          {
            "format": "dateTimeFromNow",
            "label": "Last Sync"
          }
        ]
      },
      {
        "id": 7,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "type": "graph",
        "title": "KB Entity Count",
        "targets": [
          {
            "expr": "kb_total_entities",
            "legendFormat": "{{kb_id}}"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Entities"
          }
        ]
      },
      {
        "id": 8,
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 24},
        "type": "table",
        "title": "KB Fallback Chain Utilization",
        "targets": [
          {
            "expr": "sum by (kb_id, position_in_chain) (rate(kb_fallback_hits_total[5m]))",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true},
              "indexByName": {
                "kb_id": 0,
                "position_in_chain": 1,
                "Value": 2
              }
            }
          }
        ],
        "options": {
          "showHeader": true
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "displayMode": "color-background"
            },
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 0.5, "color": "yellow"},
                {"value": 1.0, "color": "orange"},
                {"value": 2.0, "color": "red"}
              ]
            },
            "unit": "ops"
          }
        }
      }
    ],
    "annotations": {
      "list": [
        {
          "name": "KB Sync Events",
          "datasource": "-- Grafana --",
          "enable": true,
          "expr": "kb_sync_completed_total",
          "iconColor": "blue",
          "tags": ["sync"]
        }
      ]
    }
  }
}
