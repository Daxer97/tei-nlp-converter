# TEI NLP Converter - Environment Configuration Example
# Copy this file to .env and update with your values

# ===========================
# Application Settings
# ===========================
APP_NAME=TEI NLP Converter
VERSION=2.1.0
ENVIRONMENT=production  # development, testing, production
DEBUG=false
HOST=0.0.0.0
PORT=8080
WORKERS=4

# ===========================
# NLP Provider Configuration
# ===========================
# Primary NLP provider: spacy, google, remote
NLP_PROVIDER=google

# Fallback providers (comma-separated): spacy, google, remote
NLP_FALLBACK_PROVIDERS=spacy

# ===========================
# SpaCy Configuration
# ===========================
SPACY_MODEL=en_core_web_sm
ENABLE_GPU=false
BATCH_SIZE=32

# ===========================
# Google Cloud NLP Configuration
# ===========================
# Google Cloud Project ID
GOOGLE_CLOUD_PROJECT=your-project-id

# Path to Google Cloud service account credentials JSON file
GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json

# Alternative: Google Cloud API Key (if not using service account)
# GOOGLE_CLOUD_API_KEY=your-api-key

# Google Cloud NLP API quotas and rate limits
GOOGLE_API_RATE_LIMIT=600  # requests per minute
GOOGLE_API_QUOTA_DAILY=800000  # characters per day
GOOGLE_API_MAX_TEXT_LENGTH=1000000  # 1M characters per request

# ===========================
# Remote NLP Server Configuration
# ===========================
NLP_SERVER_URL=http://localhost:8081
NLP_SERVER_TIMEOUT=30
NLP_SERVER_API_KEY=
NLP_CIRCUIT_BREAKER_THRESHOLD=5
NLP_CIRCUIT_BREAKER_TIMEOUT=60

# ===========================
# Database Configuration
# ===========================
DATABASE_URL=sqlite:///data/tei_nlp.db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40
DATABASE_POOL_RECYCLE=3600

# ===========================
# Redis Cache Configuration
# ===========================
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600
MAX_CACHE_SIZE=10000
CACHE_WARMUP_ON_STARTUP=true

# ===========================
# Security Configuration
# ===========================
# Generate secure random keys in production:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=change-this-to-a-secure-random-key
ENCRYPTION_KEY=change-this-to-a-secure-random-key
SESSION_SECRET=change-this-to-a-secure-random-key

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000

# Rate limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_USER=200

# Authentication
REQUIRE_AUTH=false
API_KEY=

# CSRF Protection
ENABLE_CSRF=true
CSRF_TOKEN_EXPIRY=3600

# Text limits
MAX_TEXT_LENGTH=100000

# ===========================
# Logging Configuration
# ===========================
LOG_LEVEL=INFO
LOG_FILE_MAX_BYTES=10485760
LOG_FILE_BACKUP_COUNT=10
AUDIT_LOG_FILE=logs/audit.log

# ===========================
# Background Tasks
# ===========================
ENABLE_BACKGROUND_TASKS=true
LARGE_TEXT_THRESHOLD=5000
TASK_RETENTION_DAYS=7
MAX_CONCURRENT_TASKS=10
TASK_RECOVERY_ON_STARTUP=true

# ===========================
# Data Retention
# ===========================
DATA_RETENTION_DAYS=90
CLEANUP_INTERVAL_HOURS=24

# ===========================
# Monitoring & Metrics
# ===========================
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_AUDIT_LOG=true
ENABLE_REQUEST_ID=true

# ===========================
# Performance
# ===========================
MAX_MEMORY_MB=1024
REQUEST_TIMEOUT=300
